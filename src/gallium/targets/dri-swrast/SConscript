Import('*')

if not 'softpipe' in env['drivers']:
    print 'warning: softpipe driver not built skipping swrastg_dri.so'
    Return()

env = drienv.Clone()

env.Append(CPPPATH = [
    '#/src/gallium/winsys/sw/dri',
])

env.Prepend(LIBS = [
    st_drisw,
    ws_dri,
    softpipe,
    trace,
    mesa,
    glsl,
    gallium,
    COMMON_DRI_SW_OBJECTS
])

swrastg_sources = [
    'swrast_drm_api.c'
]

env.LoadableModule(
    target ='swrastg_dri.so',
    source = swrastg_sources,
    SHLIBPREFIX = '',
)
