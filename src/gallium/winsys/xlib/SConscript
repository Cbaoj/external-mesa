#######################################################################
# SConscript for xlib winsys


Import('*')

if env['platform'] == 'linux' \
        and 'mesa' in env['statetrackers']:

    env = env.Clone()

    env.Append(CPPPATH = [
        '#/src/gallium/include',
        '#/src/gallium/auxiliary',
        '#/src/gallium/drivers',
    ])

    st_xlib = env.ConvenienceLibrary(
	target = 'ws_xlib',
	source = [
               'xlib_cell.c',
               'xlib_llvmpipe.c',
               'xlib_softpipe.c',
               'xlib_sw_winsys.c',
		]
    )
    Export('ws_xlib')
