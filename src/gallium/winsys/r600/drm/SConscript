Import('*')

env = env.Clone()

r600_sources = [
    'bof.c',
    'r600_state2.c',
    'evergreen_state.c',
    'r600.c',
    'r600_drm.c',
    'radeon_bo.c',
    'radeon_pciid.c',
    'radeon_ws_bo.c',
    'radeon_bo_pb.c',
]

env.ParseConfig('pkg-config --cflags libdrm_radeon')
env.Append(CPPPATH = '#/src/gallium/drivers/r600')

r600winsys = env.ConvenienceLibrary(
    target ='r600winsys',
    source = r600_sources,
)

Export('r600winsys')
