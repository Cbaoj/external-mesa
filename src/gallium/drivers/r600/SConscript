Import('*')

env = env.Clone()
env.Append(CPPPATH = [
    '#/include', 
    '#/src/mesa',
])

r600 = env.ConvenienceLibrary(
    target = 'r600',
    source = [
        'r600_buffer.c',
        'r600_context.c',
        'r600_draw.c',
        'r600_query.c',
        'r600_screen.c',
        'r600_state.c',
        'r600_texture.c',
    ])

Export('r600')
