Import('*')

env = env.Clone()

env.Prepend(LIBS = gallium)

if platform in ('freebsd8', 'sunos5'):
    env.Append(LIBS = ['m'])

if platform == 'freebsd8':
    env.Append(LIBS = ['pthread'])

progs = [
    'clear',
    'tri',
    'tri-instanced',
    'quad-tex',
    'fs-test',
    'vs-test',
    'gs-test',
    'tri-gs',
]

for prog in progs:
    env.Program(
        target = prog,
        source = prog + '.c',
    )

